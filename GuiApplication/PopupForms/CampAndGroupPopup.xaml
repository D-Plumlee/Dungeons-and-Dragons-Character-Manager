<Window x:Class="GuiApplication.PopupForms.CampAndGroupPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiApplication.PopupForms"
        mc:Ignorable="d"
        x:Name="PopupWindo"
        Title="Add Campaigns and Groups" Height="441" Width="439">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="151*"/>

            <RowDefinition Height="172*"/>
        </Grid.RowDefinitions>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto" Width="auto">
            <Label FontWeight="Bold" Margin="0,0,25,0" FontSize="16" Content="Campaigns And Groups:"/>
            <Button Margin="10,5,0,5" Content="Exit" Click="Exit_Click"/>
        </WrapPanel>
        <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="auto">
            <RadioButton Content="Campaigns" x:Name="CampaignRadioButton" Checked="CampaignChecked" Unchecked="CampaignUnchecked"/>
            <RadioButton Content="Groups" Margin="30,0,10,0" Checked="GroupChecked" Unchecked="GroupUnchecked"/>
        </WrapPanel>
        <WrapPanel x:Name="CampaignInputs" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto" Width="auto">
            <StackPanel Orientation="Vertical">
                <Label Content="Current Campaigns:" HorizontalAlignment="left"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox MinWidth="110" x:Name="CampaignCombobox" ItemsSource="{Binding ElementName=PopupWindo, Path=EditingEntry.Campaign}">
                    
                </ComboBox>
                    <Button Margin="3" x:Name="RemoveCampaignButton" Click="RemoveCampaignButton_Click">
                        <StackPanel Orientation="Vertical" Width="50">
                            <TextBlock HorizontalAlignment="Center" FontSize="10">Remove</TextBlock>
                            <TextBlock HorizontalAlignment="Center" FontSize="10">Selected</TextBlock>
                        </StackPanel></Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="30,5,10,0" Orientation="Vertical">
                <Label Content="Add New Campaign:"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{}" x:Name="CampaignTextBox" Width="120"/>
                    <Button Margin="3" x:Name="AddCampaignButton" Content="Add" Click="AddCampaignButton_Click"/>
                </StackPanel>
            </StackPanel>
        </WrapPanel>
        <WrapPanel Grid.Row="2" x:Name="GroupInputs" Visibility="Collapsed" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto" Width="auto">
            <StackPanel Orientation="Vertical">
                <Label Content="Current Groups:" HorizontalAlignment="left"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox MinWidth="110"  x:Name="GroupCombobox" ItemsSource="{Binding ElementName=PopupWindo, Path=EditingEntry.Group}">
                    
                </ComboBox>
                    <Button Margin="3" Click="RemoveGroup_Click" >
                        <StackPanel Orientation="Vertical" Width="50">
                            <TextBlock HorizontalAlignment="Center" FontSize="10">Remove</TextBlock>
                            <TextBlock HorizontalAlignment="Center" FontSize="10">Selected</TextBlock>
                        </StackPanel></Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="30,5,10,0" Orientation="Vertical">
                <Label Content="Add New Group:"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="120" x:Name="GroupTextBox"/>
                    <Button Margin="3" Content="Add" Click="AddGroup_Click"/>
                </StackPanel>
            </StackPanel>
        </WrapPanel>

    </Grid>
</Window>
