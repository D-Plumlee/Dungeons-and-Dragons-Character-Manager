<Popup x:Class="GuiApplication.PopupForms.NewEntryPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GuiApplication"
             mc:Ignorable="d" 
       x:Name="PopupControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <Popup.Resources>
        <local:FileNameConverter x:Key="stringConverter"/>
    </Popup.Resources>
    <Border BorderBrush="Black" BorderThickness="1" Background="Beige">
        <StackPanel Orientation="Vertical" Margin="5">
            <WrapPanel Orientation="Horizontal">
                <Label Content="New Entry Name: " Margin="3,5,15,5"/>
                <Button Content="Create" Margin="5" Click="CreateButton_Clicked"/>
                <Button Content="Cancel" Margin="5,5,10,5" Click="CloseButton_Clicked"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <TextBox Width="100" Margin="7,0,0,0" Text="{Binding ElementName=PopupControl, Path=NewEntryName}"/>
               
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" Margin="0,10,0,5">
                <Label Content="New Entry's File: "/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100">
            <ItemsControl Margin="0,0,5,0" ItemsSource="{Binding ElementName=PopupControl, Path=AllFiles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                            <RadioButton GroupName="Files" Click="RadioButtonHandler" Content="{Binding Path=., Converter={StaticResource stringConverter}}"/>
                        </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl></ScrollViewer>
            </WrapPanel>
        </StackPanel>
    </Border>
</Popup>
